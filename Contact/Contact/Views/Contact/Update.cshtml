@model ContactWeb.Models.ContactEditViewModel;

@{ var categoryOptions = Enum.GetValues(typeof(Contact.Domain.Category));
    }


<form asp-controller="Contact" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First name:</label>
        <input asp-for="FirstName" value="@Model.FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="SecondName">Second name:</label>
        <input asp-for="SecondName" />
        <span asp-validation-for="SecondName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birthdate">Birthdate:</label>
        <input asp-for="Birthdate" type="date" />
        <span asp-validation-for="Birthdate"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber:</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            @{
                foreach (var item in categoryOptions)
                {
                    <option>@item</option>
                }
            }
        </select>
        <span asp-validation-for="Category"></span>
    </div>
    <div class="form-group">
        <img src="@Model.PhotoUrl" />
        <label asp-for="Avatar">Avatar:</label>
        <input asp-for="Avatar" type="file" />
        <span asp-validation-for="Avatar"></span>
    </div>
    <button class="btn btn-primary" type="submit">Update</button>
</form>


