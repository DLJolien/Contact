@model IEnumerable<ContactListViewModel>;

@{ if (Model.Count() == 0)
    {
        <strong>There are no contacts in the list at the moment.</strong>
    }
    else
    {
        foreach (ContactListViewModel item in Model)
        {
            <strong>First name:</strong>
            <p>item.FirstName</p>

            <strong>Second name:</strong>
            <p>item.SecondName</p>

            <strong>Phone number:</strong>
            <p>item.PhoneNumber</p>

            <strong>Address:</strong>
            <p>item.Address</p>

            <strong>Email:</strong>
            <p>item.Email</p>

            <strong>Description:</strong>
            <p>item.Description</p>
        }
    }
}




