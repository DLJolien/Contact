@model IEnumerable<ContactListViewModel>;

@{ if (Model.Count() == 0)
    {
        <strong>There are no contacts in the list at the moment.</strong>
    }
    else
    {
        <strong>Names:</strong>
        foreach (ContactListViewModel item in Model)
        {

        <p> <a asp-controller="contact" asp-action="detail" asp-route-id="@item.Id"> @item.FirstName @item.SecondName</a> 
            <a asp-controller="contact" asp-action="update" asp-route-id="@item.Id"> Edit</a></p>

        }
    }
}

<a asp-controller="Contact" asp-action="Create">Create new contact</a>




