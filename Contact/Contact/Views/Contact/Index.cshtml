@model IEnumerable<ContactListViewModel>;

@{ if (Model.Count() == 0)
    {
        <strong>There are no contacts in the list at the moment.</strong>
    }
    else
    {
<form asp-controller="Contact" asp-action="Select" method="get">
    <label>Filter on name:</label>
    <input type="type" name="query" />
    <button type="submit">Apply</button>
</form>
        
        <strong>Names:</strong>
        foreach (ContactListViewModel item in Model)
        {

        <p> <a asp-controller="contact" asp-action="detail" asp-route-id="@item.Id"> @item.SecondName @item.FirstName</a> 
            <a asp-controller="contact" asp-action="update" asp-route-id="@item.Id"> Edit</a>
            <a asp-controller="contact" asp-action="delete" asp-route-id="@item.Id"> Delete</a></p>

        }
    }
}

